libraries.power {
	install-directory = $(options.library-directory)/vera/plugins
	sources = \
		common.vala \
		power.vala \
		tray/batterymenu.vala \
		tray/preferencesmenu.vala \
		tray/tray.vala
	compile-flags = -O2 -flto
	link-flags = -flto -Wl,--as-needed
	vala-compile-flags = --vapidir=../vapis
	
	vala-packages = gee-1.0 libpeas-1.0 gtk+-3.0 vera x11 upower-glib
	packages = gee-1.0 libpeas-1.0 gtk+-3.0 vera x11 upower-glib

}
